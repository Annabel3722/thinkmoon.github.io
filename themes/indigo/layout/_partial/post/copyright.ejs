<blockquote class="post-copyright">
    <% if(theme.postMessage || theme.show_last_updated) { %>
    <div class="content">
        <span>发布时间:</span>
        <%- page.date.format("YYYY-MM-DD - HH:MM") %><br>
        <%- partial('updated') %>
        <% if(theme.postMessage) { %>
        <%- _.template(theme.postMessage)(locals) %>
        <% } %>
    </div>
    <% } %>
    <footer>
        <a href="<%- config.url %>"><img src="<%- url_for(theme.avatar) %>" alt="<%- config.author %>" <%- config.author %>></a>
    </footer>
</blockquote>

